<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="NearbyTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/NearbyTextAppearance</item>
        <item name="tabIndicatorColor">#FFFFFF</item>
        <item name="tabBackground">@color/tabMainColor</item>
    </style>
    <style name="NearbyTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">#dcfff6</item>
    </style>

</resources>
